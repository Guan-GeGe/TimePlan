<view class="container"><view class="header"><text class="greeting">{{greeting}}</text><text class="date">{{currentDate}}</text></view><view class="tree-section"><view class="tree-container"><view class="{{['tree','tree-level-'+treeLevel,[(showCelebration)?'tree-celebrate':'']]}}"><view class="tree-trunk"></view><view class="tree-leaves tree-leaves-1"></view><view class="tree-leaves tree-leaves-2"></view><view class="tree-leaves tree-leaves-3"></view><view class="tree-decorations"><block wx:if="{{treeLevel>=3}}"><view class="flower"></view></block><block wx:if="{{treeLevel>=4}}"><view class="fruit"></view></block></view></view><view class="tree-ground"></view></view><view class="level-info"><text class="level-text">{{"成长等级 "+treeLevel}}</text><view class="exp-bar"><view class="exp-progress" style="{{'width:'+(currentExp/levelUpExp*100+'%')+';'}}"></view></view><text class="exp-text">{{currentExp+"/"+levelUpExp+" 分钟"}}</text></view></view><view class="overview-card"><view class="card-header"><image class="card-icon" src="/static/images/overview-icon.png" mode="aspectFit"></image><text class="card-title">今日概览</text></view><view class="stats"><view class="stat-item"><image class="stat-icon" src="/static/images/complete-icon.png" mode="aspectFit"></image><text class="number">{{completedTasks}}</text><text class="label">已完成</text></view><view class="stat-item"><image class="stat-icon" src="/static/images/time-icon.png" mode="aspectFit"></image><text class="number">{{focusTime}}</text><text class="label">专注时间</text></view></view></view><view class="quick-actions"><view data-event-opts="{{[['tap',[['startFocus',['$event']]]]]}}" class="action-item" bindtap="__e"><uni-icons vue-id="30dce7ea-1" type="calendar" size="30" color="#4CAF50" bind:__l="__l"></uni-icons><text>开始专注</text></view><view data-event-opts="{{[['tap',[['addTask',['$event']]]]]}}" class="action-item" bindtap="__e"><uni-icons vue-id="30dce7ea-2" type="plus" size="30" color="#4CAF50" bind:__l="__l"></uni-icons><text>添加任务</text></view><view data-event-opts="{{[['tap',[['viewStats',['$event']]]]]}}" class="action-item" bindtap="__e"><uni-icons vue-id="30dce7ea-3" type="bars" size="30" color="#4CAF50" bind:__l="__l"></uni-icons><text>数据统计</text></view></view><view class="todo-section"><view class="card-header"><image class="card-icon" src="/static/images/task-icon.png" mode="aspectFit"></image><text>今日待办</text><text data-event-opts="{{[['tap',[['viewAllTasks',['$event']]]]]}}" class="more" bindtap="__e">查看全部</text></view><view class="todo-list"><block wx:if="{{todayTasks.length>0}}"><block wx:for="{{todayTasks}}" wx:for-item="item" wx:for-index="__i0__" wx:key="id"><view class="todo-item"><checkbox checked="{{item.completed}}" data-event-opts="{{[['tap',[['toggleTask',['$0'],[[['todayTasks','id',item.id,'id']]]]]]]}}" bindtap="__e"></checkbox><text class="{{[(item.completed)?'completed':'']}}">{{item.title}}</text></view></block></block><block wx:else><view class="empty-tasks"><image class="empty-image" src="/static/images/empty-tasks.png" mode="aspectFit"></image><text>还没有待办任务哦</text></view></block></view></view></view>