
.container.data-v-1cf27b2a {
  padding: 30rpx;
  padding-top: 100rpx; 
  background-color: #f8fafc;
  min-height: 100vh;
}

/* 问候卡片 */
.greeting-card.data-v-1cf27b2a {
  background-image: linear-gradient(135deg, #4f46e5, #5e60ce);
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 30rpx;
  position: relative;
  box-shadow: 0 10rpx 25rpx rgba(79, 70, 229, 0.2);
}
.glass-morphism.data-v-1cf27b2a {
  background-color: rgba(255, 255, 255, 0.1);
}
.animate-fade-in.data-v-1cf27b2a {
  animation: fadeIn-1cf27b2a 0.5s ease-in-out;
}
.animate-slide-up.data-v-1cf27b2a {
  animation: slideUp-1cf27b2a 0.5s ease-in-out;
}
@keyframes fadeIn-1cf27b2a {
from { opacity: 0;
}
to { opacity: 1;
}
}
@keyframes slideUp-1cf27b2a {
from { 
    opacity: 0;
    transform: translateY(30rpx);
}
to { 
    opacity: 1;
    transform: translateY(0);
}
}
.greeting-title.data-v-1cf27b2a {
  font-size: 44rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 12rpx;
}
.greeting-date.data-v-1cf27b2a {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}
.efficiency-section.data-v-1cf27b2a {
  display: flex;
  align-items: center;
  margin-top: 30rpx;
}
.efficiency-left.data-v-1cf27b2a {
  flex: 1;
}
.efficiency-label.data-v-1cf27b2a {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 8rpx;
}
.efficiency-score.data-v-1cf27b2a {
  display: flex;
  align-items: center;
}
.score-value.data-v-1cf27b2a {
  font-size: 60rpx;
  font-weight: bold;
  color: #ffffff;
  margin-right: 16rpx;
}
.score-trend.data-v-1cf27b2a {
  display: flex;
  align-items: center;
}
.trend-up.data-v-1cf27b2a {
  color: #34d399;
  font-size: 24rpx;
}
.trend-down.data-v-1cf27b2a {
