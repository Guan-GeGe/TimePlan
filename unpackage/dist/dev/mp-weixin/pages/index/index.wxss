  font-size: 24rpx;
}
.efficiency-icon.data-v-1cf27b2a {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.2);
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 快捷操作 */
.quick-actions.data-v-1cf27b2a {
  display: grid;
  grid-template-columns: repeat(1, 1fr);
  gap: 20rpx;
  margin-bottom: 30rpx;
}
.action-btn.data-v-1cf27b2a {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 20rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}
.action-text.data-v-1cf27b2a {
  font-size: 24rpx;
  color: #4b5563;
  margin-top: 10rpx;
}

