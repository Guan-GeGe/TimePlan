<view class="container"><view class="form-group"><text class="label">任务名称</text><input class="input" placeholder="请输入任务名称" data-event-opts="{{[['input',[['__set_model',['','taskTitle','$event',[]]]]]]}}" value="{{taskTitle}}" bindinput="__e"/></view><view class="form-group"><text class="label">预计时长</text><view class="duration-picker"><view class="time-input"><input class="input" type="number" data-event-opts="{{[['input',[['__set_model',['','duration','$event',[]]]]]]}}" value="{{duration}}" bindinput="__e"/><text class="unit">分钟</text></view><view class="quick-times"><block wx:for="{{quickTimes}}" wx:for-item="time" wx:for-index="__i0__" wx:key="*this"><text data-event-opts="{{[['tap',[['selectDuration',['$0'],[[['quickTimes','',__i0__]]]]]]]}}" class="{{['time-tag',duration===time?'active':'']}}" bindtap="__e">{{time+"分钟"}}</text></block></view></view></view><view class="form-group"><text class="label">任务优先级</text><view class="priority-group"><block wx:for="{{priorities}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view data-event-opts="{{[['tap',[['selectPriority',[index]]]]]}}" class="{{['priority-item',selectedPriority===index?'active':'']}}" bindtap="__e"><text>{{item.label}}</text></view></block></view></view><button data-event-opts="{{[['tap',[['submitTask',['$event']]]]]}}" class="submit-btn" bindtap="__e">添加任务</button></view>