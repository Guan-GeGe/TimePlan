<view class="container"><block wx:if="{{currentTask}}"><view class="task-info"><text class="task-title">{{currentTask.title}}</text><text class="task-duration">{{"预计 "+currentTask.duration+" 分钟"}}</text></view></block><block wx:else><view class="task-info empty-state"><image class="empty-image" src="/static/images/empty-panda.png" mode="aspectFit"></image><text class="task-title">未选择任务</text><text data-event-opts="{{[['tap',[['selectTask',['$event']]]]]}}" class="select-task" bindtap="__e">点击选择任务</text></view></block><view class="timer-section"><block wx:if="{{currentTask&&!isPaused}}"><image class="focus-image" src="{{isStarted?'/static/images/focus-panda.png':''}}" mode="aspectFit"></image></block><view class="timer-display"><text class="time">{{$root.m0}}</text></view><view class="progress-bar"><view class="progress" style="{{'width:'+((1-remainingTime/totalTime)*100+'%')+';'}}"></view></view></view><view class="control-section"><view data-event-opts="{{[['tap',[['toggleTimer',['$event']]]]]}}" class="{{['start-btn',isPaused?'paused':'']}}" bindtap="__e"><view class="btn-inner"></view></view></view><block wx:if="{{isStarted}}"><view class="focus-tip"><text>专注中，请勿退出页面</text></view></block></view>